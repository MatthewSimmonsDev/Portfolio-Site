extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box


        h1=project.project_name

        p #{project.description}

      .project-tech-links-box.box
        h6 Technologies
        ul
          each tech  in project.technologies
            li= tech  

        a.btn-link(href='https://matthewsimmonsdev.github.io/Calculator/') Live Demo
        a.btn-link(href='https://github.com/MatthewSimmonsDev/Calculator') GitHub Repo

    .project-img-box.box

      img.project-img(src=`${project.image_urls[0]}`, alt='picture in action')
      img.project-img(src=`${project.image_urls[1]}`, alt='picture in action')
      img.project-img(src='https://placehold.it/1200x550', alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
